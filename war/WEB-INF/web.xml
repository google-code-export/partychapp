<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <!-- XMPP receiving -->
  <servlet>
    <servlet-name>xmppreceiver</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.PartychappServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>xmppreceiver</servlet-name>
    <url-pattern>/_ah/xmpp/message/chat/</url-pattern>
  </servlet-mapping>

  <!-- Web UI -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>createRoomServlet</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.web.CreateRoomServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>createRoomServlet</servlet-name>
    <url-pattern>/room</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>inviteToRoomServlet</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.web.InviteToRoomServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>inviteToRoomServlet</servlet-name>
    <url-pattern>/invite</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>webchannelhandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.web.ChannelServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>webchannelhandler</servlet-name>
    <url-pattern>/channel/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>webuserhandler</servlet-name>
    <jsp-file>user.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>webuserhandler</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>

  <!-- JSON outputs -->
  <servlet>
    <servlet-name>targetdetailsjsonhandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.json.TargetDetailsJsonServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>targetdetailsjsonhandler</servlet-name>
    <url-pattern>/targetdetailsjson/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>channeljsonhandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.json.ChannelJsonServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>channeljsonhandler</servlet-name>
    <url-pattern>/channeljson/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>userinfojsonhandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.json.UserInfoJsonServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>userinfojsonhandler</servlet-name>
    <url-pattern>/userinfo</url-pattern>
  </servlet-mapping>

  <!-- Admin UI -->
  <servlet>
    <servlet-name>adminchannelhandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.admin.ChannelServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>adminchannelhandler</servlet-name>
    <url-pattern>/admin/channel/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>adminchannelcleanuphandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.admin.ChannelCleanupServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>adminchannelcleanuphandler</servlet-name>
    <url-pattern>/admin/channelcleanup/*</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Specify which of the web and JSON outputs require login -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/room</url-pattern>
      <url-pattern>/invite</url-pattern>
      <url-pattern>/user</url-pattern>
      <url-pattern>/user.jsp</url-pattern>
      <url-pattern>/channel/*</url-pattern>
      <url-pattern>/reasons/*</url-pattern>
      <url-pattern>/channeljson/*</url-pattern>
      <url-pattern>/userinfo</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- None of the include/ JSPs should be directly accessible -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/include/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Mail receiving -->
  <servlet>
    <servlet-name>mailhandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.EmailServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>mailhandler</servlet-name>
    <url-pattern>/_ah/mail/*</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/_ah/mail/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Cron and tasks -->
  <servlet>
    <servlet-name>cronandtaskshandler</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.web.CronAndTasksServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>cronandtaskshandler</servlet-name>
    <url-pattern>/cron/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cronandtaskshandler</servlet-name>
    <url-pattern>/tasks/*</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/cron/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/tasks/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Apstats -->
  <filter>
    <filter-name>appstats</filter-name>
    <filter-class>com.google.appengine.tools.appstats.AppstatsFilter</filter-class>
    <init-param>
      <param-name>logMessage</param-name>
      <param-value>Appstats available: /appstats/details?time={ID}</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>appstats</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>appstats</servlet-name>
    <servlet-class>com.google.appengine.tools.appstats.AppstatsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>appstats</servlet-name>
    <url-pattern>/appstats/*</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/appstats/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
</web-app>
