<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>xmppreceiver</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.PartychappServlet</servlet-class>
    
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.imjasonh.partychapp.server.GreetingServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>xmppreceiver</servlet-name>
    <url-pattern>/_ah/xmpp/message/chat/</url-pattern>

    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/partychapp/greet</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>Partychapp.html</welcome-file>
  </welcome-file-list>
</web-app>
